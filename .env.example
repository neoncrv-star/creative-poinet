# Database Configuration (MySQL)
# Use different files/values for each environment
# In development, keep a local DB; in production, use your hosting DB
DB_NAME=creative_dev
DB_USER=root
DB_PASSWORD=
DB_HOST=127.0.0.1
# Optional DB tuning and logging
DB_LOGGING=false
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Application Configuration
PORT=3000
SESSION_SECRET=complex_secret_key_here
SESSION_NAME=creative_point_session
NODE_ENV=development
TRUST_PROXY=1

# Cookies / Session
# When behind HTTPS in production, set COOKIE_SECURE=true and COOKIE_DOMAIN to your domain
COOKIE_SECURE=false
COOKIE_DOMAIN=
SAME_SITE=lax

# Schema Sync Controls (be careful in production)
DB_SYNC_ALTER=false
DB_SYNC_FORCE=false
