<%- include('layout-header') %>

<div class="admin-card">
    <div class="card-header-flex" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2 style="font-size: 1.25rem; color: var(--secondary-color);">إدارة الخدمات</h2>
        <a href="/admin/services/add" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة خدمة جديدة
        </a>
    </div>

    <div class="admin-table-container">
        <table>
            <thead>
                <tr>
                    <th>الصورة</th>
                    <th>العنوان العربي</th>
                    <th>العنوان الإنجليزي</th>
                    <th>الترتيب</th>
                    <th>الحالة</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                <% services.forEach(function(service) { %>
                    <tr>
                        <td>
                            <% if (service.image) { %>
                                <img src="<%= assetPath(service.image) %>" alt="<%= service.imageAlt_ar || service.imageAlt_en || service.title_ar || service.title_en %>" style="width: 60px; height: 40px; object-fit: cover; border-radius: 4px;">
                            <% } else { %>
                                <div style="width: 60px; height: 40px; background: #eee; border-radius: 4px; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-image text-muted"></i>
                                </div>
                            <% } %>
                        </td>
                        <td>
                            <div style="font-weight: 600; color: var(--secondary-color);"><%= service.title_ar %></div>
                        </td>
                        <td>
                            <div style="font-size: 0.9rem; color: var(--text-muted);"><%= service.title_en %></div>
                        </td>
                        <td>
                            <span class="badge"><%= service.display_order %></span>
                        </td>
                        <td>
                            <% if (service.is_active) { %>
                                <span class="badge badge-read">مفعلة</span>
                            <% } else { %>
                                <span class="badge badge-unread">مخفية</span>
                            <% } %>
                        </td>
                        <td>
                            <div style="display: flex; gap: 8px;">
                                <a href="/admin/services/edit/<%= service.id %>" class="btn btn-sm btn-info" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/admin/services/delete/<%= service.id %>" class="btn btn-sm btn-danger" onclick="return confirm('هل أنت متأكد من حذف هذه الخدمة؟')" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                <% }) %>
                <% if (services.length === 0) { %>
                    <tr>
                        <td colspan="6" style="text-align: center; padding: 3rem; color: var(--text-muted);">
                            <i class="fas fa-layer-group fa-3x" style="display: block; margin-bottom: 1rem; opacity: 0.5;"></i>
                            لا توجد خدمات مضافة حالياً.
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('layout-footer') %>
