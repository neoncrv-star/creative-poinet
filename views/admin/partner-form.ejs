<%- include('layout-header') %>

<div class="admin-content-inner">
    <div class="admin-topbar-actions" style="margin-bottom: 2rem; display: flex; justify-content: space-between; align-items: center;">
        <h2 style="font-weight: 700; color: var(--secondary-color);"><%= partner ? 'تعديل بيانات الشريك' : 'إضافة شريك جديد' %></h2>
        <a href="/admin/partners" class="btn btn-secondary" style="background: #eee; color: var(--text-main);">
            <i class="fas fa-arrow-right"></i> إلغاء والعودة
        </a>
    </div>

    <form action="/admin/partners/<%= partner ? 'edit/' + partner.id : 'add' %>" method="POST" enctype="multipart/form-data">
        <div class="form-layout" style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem;">
            <!-- Main Content Column -->
            <div class="form-main-col">
                <div class="admin-card">
                    <h3 style="margin-bottom: 1.5rem; color: var(--secondary-color); border-bottom: 1px solid #eee; padding-bottom: 10px;">
                        <i class="fas fa-handshake"></i> بيانات الشريك الأساسية
                    </h3>
                    
                    <div class="form-group">
                        <label>اسم الشريك</label>
                        <input type="text" name="name" value="<%= partner ? partner.name : '' %>" required placeholder="مثال: أرامكو السعودية">
                    </div>

                    <div class="form-row" style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; margin-top: 1.5rem;">
                        <div class="form-group">
                            <label><i class="fas fa-sort-numeric-down"></i> ترتيب العرض</label>
                            <input type="number" name="display_order" value="<%= partner ? partner.display_order : 0 %>">
                        </div>
                        <div class="form-group" style="display: flex; align-items: flex-end;">
                            <div style="background: #f8f9fa; padding: 12px 15px; border-radius: 8px; border: 1px solid #eee; width: 100%;">
                                <label style="display: flex; align-items: center; gap: 10px; cursor: pointer; margin-bottom: 0;">
                                    <input type="checkbox" name="is_active" style="width: 20px; height: 20px;" <%= (!partner || partner.is_active) ? 'checked' : '' %>>
                                    <span>تفعيل الشريك</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions" style="margin-top: 1rem;">
                    <button type="submit" class="btn btn-primary" style="padding: 0.8rem 2rem;">
                        <i class="fas fa-save"></i> <%= partner ? 'حفظ التعديلات' : 'إضافة الشريك' %>
                    </button>
                </div>
            </div>

            <!-- Sidebar Column -->
            <div class="form-side-col">
                <div class="admin-card">
                    <h3 style="margin-bottom: 1.5rem; color: var(--secondary-color); border-bottom: 1px solid #eee; padding-bottom: 10px;">
                        <i class="fas fa-image"></i> شعار الشريك
                    </h3>
                    
                    <% if (partner && partner.logo) { %>
                        <div class="current-image" style="margin-bottom: 1rem; border: 1px solid #eee; border-radius: 8px; overflow: hidden; background: #f8f9fa; padding: 20px; text-align: center;">
                            <img src="<%= partner.logo %>" alt="Current Logo" style="max-width: 100%; height: auto; max-height: 120px;">
                        </div>
                    <% } else { %>
                        <div class="no-image" style="background: #f8f9fa; height: 150px; display: flex; align-items: center; justify-content: center; border: 2px dashed #ddd; border-radius: 8px; margin-bottom: 1rem; color: var(--text-muted);">
                            <i class="fas fa-award fa-3x"></i>
                        </div>
                    <% } %>

                    <div class="file-upload-wrapper" style="position: relative;">
                        <input type="file" name="logo" id="partner-logo" accept="image/*" style="position: absolute; width: 100%; height: 100%; opacity: 0; cursor: pointer;" onchange="updateFileName(this)" <%= partner ? '' : 'required' %>>
                        <div class="btn btn-outline" style="width: 100%; border: 2px dashed var(--primary-color); color: var(--primary-color); justify-content: center;">
                            <i class="fas fa-cloud-upload-alt"></i> اختر شعاراً
                        </div>
                        <div id="file-name" style="margin-top: 10px; font-size: 0.85rem; color: var(--primary-color); text-align: center;"></div>
                    </div>
                    <small style="display: block; margin-top: 10px; color: var(--text-muted); text-align: center;">يفضل استخدام PNG بخلفية شفافة</small>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
function updateFileName(input) {
    const fileName = input.files[0]?.name;
    document.getElementById('file-name').textContent = fileName ? `المجلد المختار: ${fileName}` : '';
}
</script>

<style>
@media (max-width: 992px) {
    .form-layout {
        grid-template-columns: 1fr !important;
    }
    .form-side-col {
        order: -1;
    }
}
</style>

<%- include('layout-footer') %>
