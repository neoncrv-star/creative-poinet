<%- include('layout-header') %>

<div class="admin-card">
    <div class="card-header-flex" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2 style="font-size: 1.25rem; color: var(--secondary-color);">إدارة تصنيفات الأعمال</h2>
        <a href="/admin/categories/add" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة تصنيف جديد
        </a>
    </div>

    <div class="admin-table-container">
        <table>
            <thead>
                <tr>
                    <th>اسم التصنيف</th>
                    <th>الرابط المختصر (Slug)</th>
                    <th>الترتيب</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                <% if (categories.length > 0) { %>
                    <% categories.forEach(category => { %>
                        <tr>
                            <td>
                                <div style="font-weight: 600; color: var(--secondary-color);"><%= category.name %></div>
                            </td>
                            <td>
                                <code style="background: #f1f2f6; padding: 2px 6px; border-radius: 4px; font-size: 0.85rem;"><%= category.slug %></code>
                            </td>
                            <td>
                                <span class="badge badge-read"><%= category.display_order %></span>
                            </td>
                            <td>
                                <div style="display: flex; gap: 8px;">
                                    <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-sm btn-info" title="تعديل">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/admin/categories/delete/<%= category.id %>" class="btn btn-sm btn-danger" onclick="return confirm('هل أنت متأكد من الحذف؟ سيتم فصل المشاريع المرتبطة بهذا التصنيف.')" title="حذف">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" style="text-align: center; padding: 3rem; color: var(--text-muted);">
                            <i class="fas fa-tags fa-3x" style="display: block; margin-bottom: 1rem; opacity: 0.5;"></i>
                            لا يوجد تصنيفات مضافة حالياً.
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('layout-footer') %>
