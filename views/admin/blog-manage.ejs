<%- include('layout-header') %>

<div class="admin-card">
    <div class="card-header-flex" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2 style="font-size: 1.25rem; color: var(--secondary-color);">إدارة مقالات المدونة</h2>
        <a href="/admin/blog/add" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة مقال جديد
        </a>
    </div>

    <div class="admin-table-container">
        <table>
            <thead>
                <tr>
                    <th>الصورة</th>
                    <th>العنوان</th>
                    <th>المشاهدات</th>
                    <th>تاريخ النشر</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                <% posts.forEach((post) => { %>
                    <tr>
                        <td>
                            <% if(post.image) { %>
                                <img src="<%= post.image %>" alt="<%= post.title %>" style="width: 60px; height: 40px; object-fit: cover; border-radius: 4px;">
                            <% } else { %>
                                <div style="width: 60px; height: 40px; background: #eee; border-radius: 4px; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-image text-muted"></i>
                                </div>
                            <% } %>
                        </td>
                        <td>
                            <div style="font-weight: 600; color: var(--secondary-color);"><%= post.title %></div>
                        </td>
                        <td>
                            <span class="badge badge-read">
                                <i class="fas fa-eye"></i> <%= post.views %>
                            </span>
                        </td>
                        <td>
                            <span style="font-size: 0.85rem; color: var(--text-muted);">
                                <%= new Date(post.date).toLocaleDateString('ar-EG') %>
                            </span>
                        </td>
                        <td>
                            <div style="display: flex; gap: 8px;">
                                <a href="/admin/blog/edit/<%= post.id %>" class="btn btn-sm btn-info" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/admin/blog/delete/<%= post.id %>" class="btn btn-sm btn-danger" onclick="return confirm('هل أنت متأكد من الحذف؟')" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                <% }) %>
                <% if (posts.length === 0) { %>
                    <tr>
                        <td colspan="5" style="text-align: center; padding: 3rem; color: var(--text-muted);">
                            <i class="fas fa-newspaper fa-3x" style="display: block; margin-bottom: 1rem; opacity: 0.5;"></i>
                            لا توجد مقالات مضافة حالياً.
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('layout-footer') %>
