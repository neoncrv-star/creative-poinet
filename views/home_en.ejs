    <!-- Scripts -->
    <script>
        // Menu Toggle Logic
        const menuToggle = document.querySelector('.menu-toggle-wrap');
        const menuOverlay = document.querySelector('.menu-overlay');
        const closeMenu = document.querySelector('.close-menu');
        const menuLinks = document.querySelectorAll('.menu-overlay-nav a');

        const menuTl = gsap.timeline({ paused: true });
        
        menuTl.to(menuOverlay, { 
            autoAlpha: 1, 
            duration: 0.5,
            ease: 'power2.inOut'
        })
        .from(menuLinks, { 
            y: 50, 
            opacity: 0, 
            stagger: 0.1, 
            duration: 0.6, 
            ease: 'power3.out' 
        }, '-=0.2')
        .from(closeMenu, { 
            rotation: 90, 
            opacity: 0, 
            duration: 0.4 
        }, '-=0.4');

        menuToggle.addEventListener('click', () => {
            menuTl.play();
        });

        closeMenu.addEventListener('click', () => {
            menuTl.reverse();
        });

        menuLinks.forEach(link => {
            link.addEventListener('click', () => {
                menuTl.reverse();
            });
        });

        // Preloader
        window.addEventListener('load', () => {
            const preloader = document.querySelector('.preloader');
            preloader.classList.add('hidden');
            setTimeout(() => {
                preloader.style.display = 'none';
            }, 500);
        });

        // Custom Cursor
        const cursorDot = document.querySelector('.cursor-dot');
        const cursorCircle = document.querySelector('.cursor-circle');
        
        document.addEventListener('mousemove', (e) => {
            cursorDot.style.left = e.clientX + 'px';
            cursorDot.style.top = e.clientY + 'px';
            
            // Add slight delay to circle for organic feel
            setTimeout(() => {
                cursorCircle.style.left = e.clientX + 'px';
                cursorCircle.style.top = e.clientY + 'px';
            }, 50);
        });

        document.addEventListener('mousedown', () => {
            cursorCircle.style.transform = 'translate(-50%, -50%) scale(0.8)';
        });

        document.addEventListener('mouseup', () => {
            cursorCircle.style.transform = 'translate(-50%, -50%) scale(1)';
        });

        document.querySelectorAll('a, button, .service-card').forEach(el => {
            el.addEventListener('mouseenter', () => document.body.classList.add('hovered'));
            el.addEventListener('mouseleave', () => document.body.classList.remove('hovered'));
        });

        // GSAP Animations
        gsap.registerPlugin(ScrollTrigger);

        // Header Scroll
        window.addEventListener('scroll', () => {
            const header = document.querySelector('.site-header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Hero Reveal
        gsap.from('.hero-title', { 
            duration: 1.5, 
            y: 100, 
            opacity: 0, 
            ease: 'power4.out',
            delay: 0.5 
        });

        gsap.from('.hero-subtitle', { 
            duration: 1.5, 
            y: 50, 
            opacity: 0, 
            ease: 'power4.out', 
            delay: 0.8 
        });

        // Sections Reveal
        gsap.utils.toArray('.section-title').forEach(title => {
            gsap.from(title, {
                scrollTrigger: {
                    trigger: title,
                    start: 'top 85%',
                },
                y: 50,
                opacity: 0,
                duration: 1,
                ease: 'power3.out'
            });
        });

        gsap.utils.toArray('.service-card').forEach((card, i) => {
            gsap.from(card, {
                scrollTrigger: {
                    trigger: card,
                    start: 'top 90%',
                },
                y: 100,
                opacity: 0,
                duration: 1,
                delay: i * 0.1,
                ease: 'power3.out'
            });
        });

    </script>
</body>
